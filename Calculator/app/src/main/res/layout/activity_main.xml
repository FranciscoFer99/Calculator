<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPantalla"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="16dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="407dp"
        android:layout_height="563dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt7"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt8"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt9"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btDividir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="dividir"
                android:text="/"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt4"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt5"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt6"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btMultiplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="multiplicar"
                android:text="*"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt1"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt2"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt3"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btRestar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="restar"
                android:text="-"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt0"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btPunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btPunto"
                android:text="."
                android:textSize="24sp" />

            <Button
                android:id="@+id/btIgual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btIgual"
                android:text="="
                android:textSize="24sp" />

            <Button
                android:id="@+id/btSumar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sumar"
                android:text="+"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>